{
  "compilerOptions": {
    "target": "es2019",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "bundler",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}
